{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Debug] With Delve Server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "[Debug] Plugin with Real Data",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/debug/main.go",
            "cwd": "${workspaceFolder}",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "[Debug] Attach to Running Plugin",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
            "showLog": true
        }
    ]
}
